{
    "title": {
        "description": "帮助菜单标题",
        "type": "string",
        "hint": "帮助菜单",
        "default": "帮助菜单"
    },
    "subtitle": {
        "description": "帮助菜单副标题",
        "type": "string",
        "hint": "留空则根据唤醒前缀自动生成",
        "default": ""
    },
    "accent_color": {
        "description": "强调色",
        "type": "string",
        "hint": "十六进制颜色值，如 #4e96f7",
        "default": "#4e96f7"
    },
    "show_builtin_cmds": {
        "description": "是否显示 AstrBot 内置命令",
        "type": "bool",
        "default": false
    },
    "plugin_blacklist": {
        "description": "不显示的插件列表",
        "type": "list",
        "hint": "填写插件标识名，区分大小写",
        "default": []
    },
    "admin_show_all": {
        "description": "管理员始终显示完整帮助",
        "type": "bool",
        "hint": "开启后管理员发送 /help 自动跳过黑名单，关闭时需使用 /help --admin",
        "default": false
    },
    "expand_commands": {
        "description": "主菜单展开所有命令",
        "type": "bool",
        "hint": "开启后 /help 直接显示所有插件的命令列表，关闭时显示插件卡片概览",
        "default": false
    },
    "custom_templates": {
        "description": "使用自定义模板",
        "type": "bool",
        "hint": "开启后优先从插件数据目录的 custom_templates 子目录加载同名模板，找不到则回退默认",
        "default": false
    },
    "plugin_overrides": {
        "description": "插件显示覆盖",
        "type": "template_list",
        "hint": "修改自动扫描到的插件的显示名、描述、排序等",
        "default": [],
        "templates": {
            "override": {
                "name": "插件覆盖",
                "hint": "覆盖某个已安装插件的显示信息",
                "items": {
                    "plugin_name": {
                        "description": "插件标识名",
                        "type": "string",
                        "hint": "必须与实际插件名一致",
                        "default": ""
                    },
                    "display_name": {
                        "description": "自定义显示名",
                        "type": "string",
                        "hint": "留空则不覆盖",
                        "default": ""
                    },
                    "description": {
                        "description": "自定义描述",
                        "type": "string",
                        "hint": "留空则不覆盖",
                        "default": ""
                    },
                    "order": {
                        "description": "排序权重",
                        "type": "int",
                        "hint": "越小越靠前，默认 99 表示按字母序排列，设为其他值则强制排序",
                        "default": 99
                    },
                    "extra_commands": {
                        "description": "额外命令",
                        "type": "list",
                        "hint": "格式：命令名|描述|前缀，前缀可选，默认无前缀",
                        "default": []
                    }
                }
            }
        }
    },
    "custom_categories": {
        "description": "自定义分类",
        "type": "template_list",
        "hint": "用于添加非 AstrBot 插件的外部命令",
        "default": [],
        "templates": {
            "category": {
                "name": "自定义分类",
                "hint": "添加一个自定义命令分类，用于展示非插件的外部服务命令",
                "items": {
                    "name": {
                        "description": "分类名称",
                        "type": "string",
                        "default": ""
                    },
                    "description": {
                        "description": "分类描述",
                        "type": "string",
                        "default": ""
                    },
                    "order": {
                        "description": "排序权重",
                        "type": "int",
                        "hint": "越小越靠前，默认 99 表示按字母序排列，设为其他值则强制排序",
                        "default": 99
                    },
                    "commands": {
                        "description": "命令列表",
                        "type": "list",
                        "hint": "格式：命令名|描述|前缀，前缀可选，默认无前缀",
                        "default": []
                    }
                }
            }
        }
    },
    "font_url": {
        "description": "自定义字体 CSS URL",
        "type": "string",
        "hint": "可包含多个字体族，留空使用系统默认。例：https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@400;700&family=JetBrains+Mono:wght@400;700&display=swap",
        "default": ""
    },
    "font_family": {
        "description": "自定义正文字体名称",
        "type": "string",
        "hint": "需与上方 URL 中的字体对应，留空使用系统默认。例：Noto Sans SC",
        "default": ""
    },
    "mono_font_family": {
        "description": "自定义等宽字体名称",
        "type": "string",
        "hint": "用于命令名、代码等，留空使用系统默认。例：JetBrains Mono",
        "default": ""
    },
    "banner_image": {
        "description": "Banner 背景图文件名",
        "type": "string",
        "hint": "相对于插件数据目录（data/plugin_data/astrbot_plugin_neohelp/），如 banner.png",
        "default": ""
    },
    "header_logo": {
        "description": "顶部 Logo 图片文件名",
        "type": "string",
        "hint": "展开模式下显示于 Banner 顶部居中，留空使用插件自带 logo.svg。相对于插件数据目录",
        "default": ""
    },
    "footer_text": {
        "description": "底部自定义文字",
        "type": "string",
        "hint": "留空显示默认版本信息",
        "default": ""
    },
    "debug": {
        "description": "调试模式",
        "type": "bool",
        "hint": "开启后在日志中输出详细的调试信息，用于排查问题",
        "default": false
    }
}
